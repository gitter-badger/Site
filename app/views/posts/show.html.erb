<div class= "row">
<br>
<section class="small-10 small-centered columns">
<div class= "panel">

<p id="notice"><%= notice %></p>
<p align = "centre"> <h2>Movie Details</h2> </p>
<p>
  <strong>TITLE:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>CONTENT:</strong>
  <%= @post.content %>
</p>

<p>
  <strong>MOVIE REVIEW :</strong>
  <%= @post.mr %>
</p>

<p>
  <strong>VOGUE:</strong>
  <%= @post.vg %>
</p>

<p>
  <strong>TRUMPET:</strong>
  <%= @post.tp %>
</p>

<p>
  <strong>WOMEN ACHIEVERS:</strong>
  <%= @post.wa %>
</p>
<p>
<strong>TO COUNSELLOR</strong>
<%=@post.couns%>
</p>
<% @post_attachments.each do |p| %>
  <%= image_tag p.avatar_url %>
<% end %>
<div class="button">
<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
</div>
</div>
</section>
</div>
