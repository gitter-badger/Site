<body>

    <div class="brand">Aakriti</div>
    <div class="address-bar">College of Engineering, Guindy</div>

    <!-- Navigation -->
    <%= render '/home/nav'%>

  

<div class= "row">
<br>
<section class="small-10 small-centered columns">
<h2>Will be Updated soon!</h2>
<div id="app-content">
    <h2 class="page-header">Vogue </h2>
       <% @posts.each do |post| %>
        <div class="row">
        <div class="col-md-1">
        </div>
        <div class="col-md-2"><a href="#" data-reveal-id="<%= post.title%>" class = "btn btn-link"><%= post.title %></a></div>  
        <div class="col-md-6"><%= post.content %></div>  
        <%# if current_admin.has_role? :admin%>
    <!--    <div class="col-md-1"><%= link_to 'Show', post %></div>
        
