



<div class= "row">
<br>
<section class="small-8 small-centered columns">
<div class= "panel">
<span class="label"><h1>Movie review </h1></span>


<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Show</th>
      <th>Edit</th>
      <th>Destroy</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.content %></td>
        
         <td><div class="[tiny small large] button [alert round secondary]" ><%= link_to 'Show', post %></div></td>

<td><div class="[tiny small large] button [alert round secondary]" ><%= link_to 'Edit', edit_post_path(post) %></div></td>

        <td><div class="[tiny small large] button [alert round secondary]" ><%= link_to 'Destroy',post, method: :delete, data: { confirm: 'Are you sure?' } %></div></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>



</div>
</div>
</section>
</div>
